<!DOCTYPE html>
<html>
    <head>
        <meta charset="UTF-8">
        <title>Template - {% block title %}{% endblock %}</title>
        <link rel="icon" href="data:image/svg+xml,<svg xmlns=%22http://www.w3.org/2000/svg%22 viewBox=%220 0 128 128%22><text y=%221.2em%22 font-size=%2296%22>⚫️</text><text y=%221.3em%22 x=%220.2em%22 font-size=%2276%22 fill=%22%23fff%22>sf</text></svg>">
        {% block stylesheets %}
        {% endblock %}
        <!-- Tailwind Config -->
        <script src="https://cdn.tailwindcss.com"></script>
        <script>
            tailwind.config = {
                theme: {
                    extend: {
                        colors: {
                            clifford: '#da373d',
                            main: '#1a202c',
                        }
                    }
                }
            }
        </script>
        <script src="{{ asset('build/app.js') }}"></script>
    </head>
    <body>
    <nav class="bg-main p-4">
        <div class="flex justify-between items-center container px-4 sm:px-6 lg:px-8 mx-auto">
            <div class="flex items-end gap-8">
                <a
                        href="{{ path('home') }}"
                        class="font-bold text-2xl {{ app.current_route == 'home' ? 'text-blue-200' : 'text-white' }} hover:text-blue-400">
                    Template
                </a>
                {% if app.user %}
                {% endif %}
            </div>
            {% if app.user %}
                <div class="flex items-end gap-8">
                    <a
                            href="{{ path('app_logout') }}"
                            class="font-bold text-2xl {{ app.current_route == 'app_logout' ? 'text-blue-200' : 'text-white' }} hover:text-blue-400">
                        <i class="fa-solid fa-sign-out"></i>
                    </a>
                </div>
            {% else %}
                <div class="flex items-end gap-8">
                    <a
                            href="{{ path('app_login') }}"
                            class="font-bold text-2xl {{ app.current_route == 'app_login' ? 'text-blue-200' : 'text-white' }} hover:text-blue-400">
                        <i class="fa-solid fa-sign-in"></i>
                    </a>
                </div>
            {% endif %}
        </div>
    </nav>
    <div class="container fixed top-24 left-1/2 w-full -translate-x-2/4">
        {% include 'partials/flash.html.twig' %}
    </div>
    <div class="min-h-[90vh]">
        {% block body %}{% endblock %}
    </div>
    </body>
</html>
